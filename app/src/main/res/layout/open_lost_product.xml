<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3sp"
        app:cardCornerRadius="3sp"
        app:cardElevation="4sp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="3sp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rel"
        android:layout_centerHorizontal="true">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/progress"
            />
        <ImageView
        android:layout_width="300sp"
        android:layout_height="300sp"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageopen"
        />

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/productnamei"
        android:layout_below="@id/rel"
        android:text="Product name"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_margin="8sp"
        />

    <TextView
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/productnamei"
        android:textSize="15sp"

        android:id="@+id/producttd"
        android:textColor="@color/cardview_dark_background"
        android:layout_margin="12sp"

        android:text="Coolneww nlksckln sdnlkdsn dskjcdsjn cnjjkn dckjndskjn dskjnckj kdsnkjn cskjnkjdsnkj dskjnkjdsnkjdsn"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/producttd"
        android:layout_margin="3sp"

        android:layout_centerHorizontal="true"
        android:id="@+id/frt"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact : "
            android:textSize="23sp"
            android:textColor="#000"

            android:layout_margin="5sp"
            android:id="@+id/fucku" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9999999999"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="#280739"

        android:layout_margin="5sp"
        android:id="@+id/contactt"
        android:layout_toRightOf="@id/fucku"
        />


    </RelativeLayout>

    <Button
        android:id="@+id/report"
        android:layout_width="150sp"

        android:layout_height="40sp"
        android:layout_below="@+id/frt"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8sp"
        android:layout_marginTop="8sp"
        android:layout_marginEnd="8sp"
        android:layout_marginBottom="8sp"
        android:text="report spam" />

</RelativeLayout>
    </android.support.v7.widget.CardView>
</ScrollView>